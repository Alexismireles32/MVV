---
const { title, subtitle, background = 'white', id } = Astro.props;

const bgClasses = {
  white: 'bg-white',
  cream: 'bg-cream',
  gray: 'bg-gray-50'
};
---

<section class={`py-16 md:py-20 ${bgClasses[background]}`} id={id}>
  <div class="container mx-auto px-4">
    {(title || subtitle) && (
      <div class="text-center mb-12 max-w-3xl mx-auto">
        {subtitle && (
          <p class="text-primary font-semibold mb-3 text-lg">{subtitle}</p>
        )}
        {title && (
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 text-balance">
            {title}
          </h2>
        )}
      </div>
    )}
    <slot />
  </div>
</section>
