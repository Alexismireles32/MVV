---
import WhatsAppButton from './WhatsAppButton.astro';

const { 
  title, 
  subtitle, 
  description, 
  ctaText = 'Consultar por WhatsApp',
  imageSrc = '/images/hero-family.webp',
  imageAlt = 'Familia saludable'
} = Astro.props;
---

<section class="bg-gradient-to-br from-cream to-white py-16 md:py-24">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        {subtitle && (
          <p class="text-primary font-semibold mb-4 text-lg">{subtitle}</p>
        )}
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 text-balance">
          {title}
        </h1>
        <p class="text-lg md:text-xl text-gray-700 mb-8 leading-relaxed text-pretty">
          {description}
        </p>
        <WhatsAppButton text={ctaText} variant="inline" />
      </div>
      
      <div class="relative">
        <img 
          src={imageSrc || "/placeholder.svg"}
          alt={imageAlt}
          width="600"
          height="600"
          class="rounded-2xl shadow-2xl w-full h-auto"
          loading="eager"
          decoding="async"
        />
      </div>
    </div>
  </div>
</section>
